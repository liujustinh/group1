<script type="text/javascript">

function randomString(length, chars) {
    var result = '';
    for (var i = length; i > 0; --i) result += chars[Math.floor(Math.random() * chars.length)];
    return result;
}
$('#myModal').modal({
    backdrop: 'static',
    keyboard: false
})
$('#myModal').modal('hide')
function handleForm(event) 
{ event.preventDefault(); 
  axios.post("http://localhost:3000/api/post-query",{email:$('#email').val(), query:$('#query').val()}).then(res => console.log(res)) 
  console.log();
    $('#referenceNumber').text(randomString(10, '0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ'));
    $('#myModal').modal('show')

}
var form = document.getElementById("form");

form.addEventListener('submit', handleForm);
$('#closemodel').click(()=> {$('#myModal').modal('hide');$("#form")[0].reset()})



</script>